<% this.admin_view.present? ? table_col=this.admin_view : table_col=this.list_view %>
<table class="table table-sm">
  <thead class='thead-dark'>
    <tr>
      <% table_col.each do |head| %>
        <th class='' scope='col'><%=sanitize(head)%></th>
      <% end %>
      <th class='action_tr ' scope='col'>Action</th>
    </tr>
  </thead>
  <tbody>
    <% this.all.order_desc.each do |e| %>
      <tr>
        <% table_col.each do |f| %>
          <td><%= sanitize(e.send(f)) %></td>
        <% end %>
        <td>
          <p>
            <%= link_to 'Edit', edit_polymorphic_path(e), :class => 'btn btn-primary btn-sm' %>
            <%= link_to 'Remove', polymorphic_path(e), {:method => :delete, :class => 'btn btn-danger btn-sm'} %>
          </p>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>